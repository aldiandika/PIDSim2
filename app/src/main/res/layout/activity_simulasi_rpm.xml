<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simulasiRpm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/latar"
    tools:context="com.aldi_andika.pidsimrpm.SimulasiRpm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:id="@+id/graf"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp" />

                <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:id="@+id/graf2"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingBottom="8dp"
                android:id="@+id/l">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:id="@+id/error"
                    android:text="0"
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:background="@drawable/border"
                    android:gravity="center"/>

                <RadioGroup
                    android:checkedButton="@+id/offer"
                    android:id="@+id/toggle"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/outline"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/errorBtn"
                        android:background="@drawable/toggle_widget_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="error"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <RadioButton
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/rpmBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="RPM"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />
                </RadioGroup>


                <TextView
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:text="50"
                    android:id="@+id/txt_rpm"
                    android:textSize="19sp"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:layout_marginRight="18dp"
                    android:layout_marginEnd="18dp"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/start_dis"
                    android:id="@+id/start"
                    android:onClick="mulaiSimulasi"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:scaleType="fitCenter"/>

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/stop_dis"
                    android:id="@+id/stop"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:scaleType="fitCenter"/>

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/reset_dis"
                    android:id="@+id/reset"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:scaleType="fitCenter"/>

                <ToggleButton
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_log"
                    android:textOff=""
                    android:textOn=""
                    android:id="@+id/log"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"/>

                <ImageButton
                    android:layout_width="96dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ctdevice_dis"
                    android:id="@+id/kirimData"
                    android:onClick="kirimKirimData"
                    android:layout_gravity="center_horizontal"
                    android:padding="0dp"
                    android:scaleType="fitCenter"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/trace_bg">

                <ImageView
                    android:id="@+id/wheel"
                    android:src="@drawable/trace_wheel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:foregroundGravity="center"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Sp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:id="@+id/textSp"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/seekSp"
                    android:layout_gravity="center"/>

                <EditText
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:id="@+id/editSp"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Kp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:id="@+id/textKp"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/seekKp"
                    android:layout_gravity="center"
                    android:max="100"/>

                <EditText
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:id="@+id/editKp"
                    android:background="@drawable/border"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Ki"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:id="@+id/textKi"
                    android:gravity="center"/>

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/seekKi"
                    android:layout_gravity="center"
                    android:max="100"/>

                <EditText
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:id="@+id/editKi"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Kd"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:id="@+id/textKd"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/seekKd"
                    android:max="100"/>

                <EditText
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:id="@+id/editKd"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
