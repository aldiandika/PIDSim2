<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_latihan_soal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/latar"
    tools:context="com.aldi_andika.pidsimrpm.LatihanSoal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/leyoutsoal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nomorSoal"
                android:text="Soal 1"
                android:textSize="24sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/soalGambar"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/soal"
                android:text="blalalalala"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGrup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="a"
                    android:textSize="20sp"
                    android:id="@+id/radioA"
                    android:buttonTint="@color/circleColor"/>


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="b"
                    android:textSize="20sp"
                    android:id="@+id/radioB"
                    android:buttonTint="@color/circleColor"/>


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="c"
                    android:textSize="20sp"
                    android:id="@+id/radioC"
                    android:buttonTint="@color/circleColor"/>


            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/leyoutskor"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">


        <TextView
            android:id="@+id/tampilSkor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="112sp"
            android:text="50"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="45sp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/tampilSkor"
            android:text="SCORE"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:src="@drawable/finish_dis"
            android:id="@+id/finish"
            android:onClick="HalamanMenu"
            android:layout_centerInParent="true"
            android:padding="0dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/next_dis"
            android:id="@+id/next"
            android:onClick="next"
            android:padding="0dp"
            android:scaleType="fitCenter"/>


    </RelativeLayout>

</LinearLayout>
